# Set options for "xlf90" compiler on AIX systems
ifeq ($(FORTRAN_COMPILER),XLF)
FC=xlf90_r
DEFINES += -DFORTRAN95
can_do_F90=true
F90_to_f90=
MODULES=-qmoddir=$(MODDIR)
EXTRAS  = -q32 -qsuffix=f=f90:cpp=F90 
DEBUG_FLAGS =  -d -g -qcheck
PROF_FLAGS  = -g -pg 
PROD_FLAGS  = -O3 -qstrict 
DEFINES:=-WF,"$(DEFINES)"
endif
