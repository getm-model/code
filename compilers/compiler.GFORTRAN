# Set options for the GNU Fortran 95 compiler
ifeq ($(FORTRAN_COMPILER),GFORTRAN)
FC=gfortran
DEFINES += -DFORTRAN95
can_do_F90=true
F90_to_f90=
MODULES=-J$(MODDIR)
EXTRAS = -ffree-form -ffree-line-length-none -Wall -pedantic
DEBUG_FLAGS = -g 
PROF_FLAGS  = -p
PROD_FLAGS  = -O3
OMP_FLAGS   = -fopenmp
VERSION_FLAG = --version | head -1
endif
